@using RestaurantPhase1beforeAjax1.Models
@model menuDetailmodel
@{
    ViewBag.Title = "Menu";
}

  <!-- Page Content -->
<div class="container" style="padding-left:90px;margin-top:70px">
    
        <div class="row">

            <!--Restaurants' category navbar-->
            <div class="col-md-3">
                <p style="font-size:20px;padding-left:20px">@Model.restuarantName.ToUpper()</p>
                <div class="list-group">
                    @foreach (var item in Model.navBarList)
                    {
                        <a href="#" class="list-group-item">@item.CategoryName.ToUpper()</a>
                    }
                </div>
            </div>
            <!--End category navbar-->



            <div class="col-md-9" >

                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                           
                            <div class="carousel-inner">
                               @for (int i = 0; i < Model.detailMenu.Count(); i++)
                               {
                                   if (i == 0)
                                   {
                                    <div class="item active">
                                        <img class="slide-image" src="~/assets/1001menu/@Model.detailMenu[i].menu.foodImage" alt="">
                                    </div>
                                   }
                                   else
                                   {
                                    <div class="item">
                                        <img class="slide-image" src="~/assets/1001menu/@Model.detailMenu[i].menu.foodImage" alt="">
                                    </div>
                                   }
                               }
                                
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>

                <div class="row">
                    @foreach (var item in Model.detailMenu)
                    {
                        <div class="col-sm-4 col-lg-4 col-md-4" style="margin-top:20px">
                            <div class="thumbnail" style="height:260px"> 
                                                          
                                <img src="~/assets/1001menu/@item.menu.foodImage" alt="food picture" style="width:320px;height:120px">
                                <div class="caption">
                                    <h4 class="pull-right">$@item.menu.price</h4>
                                    <h4>
                                        <a href="#">@item.menu.foodName.ToUpper()</a>
                                    </h4>
                                    <p>@item.menu.briefDescription.First().ToString().ToUpper()@item.menu.briefDescription.Substring(1)</p>
                                    
                                </div>
                                <a class="btn btn-primary" style="bottom:30px;right:20px;position:absolute">+<i class="fa fa-cart-plus fa-lg" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    }
                    
                </div>

            </div>
        </div>
    </div>
<!-- /.container -->

<div class="container">

    <hr>



    <div style="margin-top:100px">
        <h2>@Model.restuarantName</h2>
        @foreach (var item in Model.navBarList)
            {
            <p>@item.CategoryName</p>
        }
        @foreach (var item in Model.detailMenu)
            {
            <p>@item.category.CategoryName , @item.menu.foodName , @item.menu.price, @item.menu.briefDescription</p>
        }
    </div>
</div>



