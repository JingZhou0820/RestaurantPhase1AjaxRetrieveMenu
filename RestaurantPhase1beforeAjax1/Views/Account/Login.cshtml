@using RestaurantPhase1beforeAjax1.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<link href="~/Content/login.css" rel="stylesheet" />


<div class="row" style="margin-top:150px">
    <div class="col-md-12">

        <div class="wrap">
            <p class="form-title">
                Sign In
            </p>
            
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", role = "form" }))
            {
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">


                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">


                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">

                        <input type="submit" value="Sign in" class="btn btn-success btn-sm" />

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new {id="rememberme"})
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 forgot-pass-content">
                            <a href="javascript:void(0)" class="forgot-pass">
                                @Html.ActionLink("Forgot password?", "ForgotPassword")
                            </a>
                        </div>
                    </div>
                }
            </section>
        </div>

    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
